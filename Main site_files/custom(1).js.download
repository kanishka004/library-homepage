$(document).ready(function () {
    $('.advisory_content').hide();
    $('#tab1').show();

    $('.advisory_tab a').click(function (e) {
        e.preventDefault();
        
        $('.advisory_tab a').removeClass('active');
        $(this).addClass('active');
        var target = $(this).attr('href');
        $('.advisory_content').hide();
        $(target).show();
    });




// awards-ranking.php
    $(".award_tab_container").hide();
    $(".award_tab_container:first").show();
    
    // Handle tab click event
    $(".award_tab_link li a").click(function (e) {
        e.preventDefault();
        
        // Remove active class from all tabs and add to the clicked tab
        $(".award_tab_link li").removeClass("active");
        $(this).parent("li").addClass("active");
        
        // Hide all content and show the clicked one
        $(".award_tab_container").hide();
        var activeTab = $(this).attr("href");
        $(activeTab).fadeIn();
    });



//complaints.php
    $(document).ready(function () {
        $(".complaints_content").hide(); // Hide all content
        $("#tab1").show(); // Show the first tab by default

        $(".complaints_tab a").click(function (e) {
            e.preventDefault();
            var target = $(this).attr("href"); 

            // Hide all content and show only the selected one
            if ($(target).is(":visible")) {
                $(target).slideUp(); // Toggle visibility
            } else {
                $(".complaints_content").slideUp();
                $(target).slideDown();
            }
        });
    });
});






$('.accordion_wrapper .accordion_items.open').children('.accordion_container').slideDown();
$('.accordion_wrapper .accordion_items .accordion_title').on('click', function () {

    $(this).parent('.accordion_items').siblings('.accordion_items.open').removeClass('open').children('.accordion_container').stop(true, true).slideUp();

    if (!$(this).parent().hasClass('open')) {
        $(this).next('.accordion_container').stop(true, true).slideDown();
        $(this).parent().addClass('open');

    } else {
        $(this).next('.accordion_container').stop(true, true).slideUp();
        $(this).parent().removeClass('open');
    }
});





